{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"]
  },
  "ignorePatterns": [
    "package.json",
    "package-lock.json",
    "node_modules",
    "*.min.js",
    "public",
    "resources"
  ]
}
